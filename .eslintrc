{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },

  "extends": "eslint:recommended",

  "rules": {
    "arrow-parens": [2, "always"],
    "arrow-spacing": 2,
    "no-console": 1,
    "no-const-assign": 2,
    "no-debugger": 1,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "strict": [2, "global"]
  }
}
